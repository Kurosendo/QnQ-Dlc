<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Shared content -->

  <RulePackDef>
    <defName>NamerDeityGlobal</defName>
    <include>
      <li>GlobalUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_deityName->[name]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>GodContent_English</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[start][middle][end]</li>

        <!-- Start never ends with a vowel -->
        <li>start->a</li>
        <li>start->al</li>
        <li>start->an</li>
        <li>start->ar</li>
        <li>start->as</li>
        <li>start->at</li>
        <li>start->b</li>
        <li>start->but</li>
        <li>start->ban</li>
        <li>start->bin</li>
        <li>start->bon</li>
        <li>start->c</li>
        <li>start->ca</li>
        <li>start->co</li>
        <li>start->d</li>
        <li>start->do</li>
        <li>start->din</li>
        <li>start->del</li>
        <li>start->ed</li>
        <li>start->en</li>
        <li>start->ent</li>
        <li>start->er</li>
        <li>start->es</li>
        <li>start->f</li>
        <li>start->for</li>
        <li>start->far</li>
        <li>start->fin</li>
        <li>start->fun</li>
        <li>start->fen</li>
        <li>start->g</li>
        <li>start->h</li>
        <li>start->had</li>
        <li>start->hat</li>
        <li>start->hen</li>
        <li>start->her</li>
        <li>start->hin</li>
        <li>start->his</li>
        <li>start->in</li>
        <li>start->is</li>
        <li>start->it</li>
        <li>start->ith</li>
        <li>start->j</li>
        <li>start->k</li>
        <li>start->l</li>
        <li>start->lon</li>
        <li>start->len</li>
        <li>start->lan</li>
        <li>start->m</li>
        <li>start->min</li>
        <li>start->mon</li>
        <li>start->men</li>
        <li>start->n</li>
        <li>start->on</li>
        <li>start->or</li>
        <li>start->oul</li>
        <li>start->our</li>
        <li>start->p</li>
        <li>start->qu</li>
        <li>start->r</li>
        <li>start->s</li>
        <li>start->sh</li>
        <li>start->st</li>
        <li>start->t</li>
        <li>start->ted</li>
        <li>start->ter</li>
        <li>start->un</li>
        <li>start->v</li>
        <li>start->ver</li>
        <li>start->w</li>
        <li>start->y</li>

        <!-- Middle is always surrounded by vowels -->
        <li>middle->a</li>
        <li>middle->e</li>
        <li>middle->i</li>
        <li>middle->o</li>
        <li>middle->u</li>
        <li>middle->ei</li>
        <li>middle->eu</li>
        <li>middle->ai</li>
        <li>middle->au</li>

        <!-- Ends never begin with vowels -->
        <li>end(p=4)-></li>
        <li>end->cus</li>
        <li>end->las</li>
        <li>end->llas</li>
        <li>end->lux</li>
        <li>end->llux</li>
        <li>end->m</li>
        <li>end->n</li>
        <li>end->nos</li>
        <li>end->pius</li>
        <li>end->r</li>
        <li>end->ra</li>
        <li>end->rus</li>
        <li>end->rath</li>
        <li>end->rrath</li>
        <li>end->rum</li>
        <li>end->rus</li>
        <li>end->ron</li>
        <li>end->s</li>
        <li>end->stus</li>
        <li>end->stor</li>
        <li>end->teus</li>
        <li>end->th</li>
        <li>end->tor</li>
        <li>end->ton</li>
        <li>end->tar</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>GodContent_Byzantine</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[syl][end]</li>
        <li>name->[syl][syl][end]</li>
        <li>name->[syl]-[syl][end]</li>

        <li>syl->[SylB]</li>

        <li>end->kos</li>
        <li>end->pos</li>
        <li>end->pon</li>
        <li>end->teo</li>
        <li>end->teas</li>
        <li>end->dio</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Culture-specific content -->

  <RulePackDef>
    <defName>NamerDeityCorunan</defName>
    <include>
      <li>NamerDeityGlobal</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>name->[syl][end]</li>
        <li>name->[syl][syl][end]</li>
        <li>name->[syl]'[syl][end]</li>

        <li>syl->[SylG]</li>

        <li>end->abrei</li>
        <li>end->tro</li>
        <li>end->ox</li>
        <li>end->brin</li>
        <li>end->bai</li>
        <li>end->bust</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerDeityAstropolitan</defName>
    <include>
      <li>NamerDeityGlobal</li>
      <li>GodContent_English</li>
    </include>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerDeityRustican</defName>
    <include>
      <li>NamerDeityGlobal</li>
      <li>GodContent_English</li>
    </include>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerDeityKriminul</defName>
    <include>
      <li>NamerDeityGlobal</li>
      <li>GodContent_English</li>
    </include>
  </RulePackDef>
  
  <RulePackDef>
    <defName>NamerDeitySophian</defName>
    <include>
      <li>NamerDeityGlobal</li>
      <li>GodContent_Byzantine</li>
    </include>
  </RulePackDef>

</Defs>