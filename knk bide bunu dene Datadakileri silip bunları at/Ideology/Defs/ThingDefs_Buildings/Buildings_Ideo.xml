          <li>Finger</li>
          <li>Toe</li>
          <li>Tongue</li>
        </bodyPartsToRestore>
        <conditionsToPossiblyCure>
          <li>Asthma</li>
          <li>BadBack</li>
          <li>Cataract</li>
          <li>Blindness</li>
          <li>Frail</li>
          <li>HearingLoss</li>
          <li>HeartArteryBlockage</li>
