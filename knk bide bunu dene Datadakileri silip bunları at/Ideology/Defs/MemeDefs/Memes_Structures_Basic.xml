<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <MemeDef>
    <defName>Structure_Animist</defName>
    <label>animist</label>
    <description>Spirits live in everything around us. In the plants and animals, rivers and trees, sky and stars. The moral structure of the universe springs from the necessity of respecting them.</description>
    <category>Structure</category>
    <iconPath>UI/Structures/Animist</iconPath>
    <impact>0</impact>
    <worshipRoomLabel>temple</worshipRoomLabel>
    <randomizationSelectionWeightFactor>2</randomizationSelectionWeightFactor>
    <deityCount>0</deityCount>
    <generalRules>
      <rulesStrings>
        <li>memeLeaderNoun->curate</li>
        <li>memeLeaderNoun->speaker</li>
        <li>memeLeaderAdjective->universe</li>
        <li>memeLeaderAdjective->spirit</li>
        <li>memeLeaderAdjective->anima</li>
        <li>memeHyphenPrefix->ani</li>
        <li>memeMoralist->shaman</li>
        <li>memeMoralist->priest</li>
        <li>memeMoralist->elder</li>
      </rulesStrings>
    </generalRules>
    <descriptionMaker>
      <patterns>
        <li><def>AnimistDescription</def></li>
      </patterns>
      <constants>
        <li><key>structure_animist</key><value>true</value></li>
      </constants>
    </descriptionMaker>
    <symbolPacks>
      <li>
        <theme>animism</theme>
        <adjective>animist</adjective>
        <member>animist</member>
      </li>
      <li>
        <theme>spiritism</theme>
        <adjective>spiritist</adjective>
        <member>spiritist</member>
      </li>
    </symbolPacks>
    <thingStyleCategories>
      <li>
        <category>Animalist</category>
        <priority>1</priority>
      </li>
    </thingStyleCategories>
  </MemeDef>

  <MemeGroupDef>
    <defName>Theist_Embodied</defName>
    <drawOffset>(0.62, 0)</drawOffset>
  </MemeGroupDef>

  <MemeDef>
    <defName>Structure_TheistEmbodied</defName>
    <label>embodied theist</label>
    <description>The god(s) walk the planets like us, yet they are powerful and immortal as we are not. They decide the moral structure of the universe.</description>
    <category>Structure</category>
    <groupDef>Theist_Embodied</groupDef>
    <iconPath>UI/Structures/Structure_EmbodiedTheist</iconPath>
    <impact>0</impact>
    <worshipRoomLabel>pantheon</worshipRoomLabel>
    <deityCount>2~4</deityCount>
    <generalRules>
      <rulesStrings>
        <li>memeCreed->sect</li>
        <li>memeCreed->cult</li>
        <li>memeCreed->temple</li>
        <li>memeCreed->faith</li>
        <li>memeHyphenPrefix->theo</li>
        <li>memeConcept->creation</li>
        <li>memeConcept->life</li>
        <li>memeLeaderNoun->templar</li>
        <li>memeLeaderAdjective->divine</li>
        <li>memeMoralist->priest</li>
        <li>memeMoralist->cleric</li>
      </rulesStrings>
    </generalRules>
    <descriptionMaker>
      <patterns>
        <li><def>TheistMyth</def></li>
        <li><def>TheistFounder</def></li>
      </patterns>
      <constants>
        <li><key>structure_theist</key><value>true</value></li>
        <li><key>structure_theistEmbodied</key><value>true</value></li>
      </constants>
    </descriptionMaker>
    <symbolPacks>
      <li>
        <ideoName>Spiritism</ideoName>
        <theme>spiritualism</theme>
        <adjective>spiritual</adjective>
        <member>spiritist</member>
      </li>
      <li>
        <ideoName>Faith</ideoName>
        <theme>faith</theme>
        <adjective>faithful</adjective>
        <member>faithholder</member>
      </li>
    </symbolPacks>
  </MemeDef>

  <MemeGroupDef>
    <defName>Theist_Abstract</defName>
    <drawOffset>(0.25, 0)</drawOffset>
  </MemeGroupDef>

