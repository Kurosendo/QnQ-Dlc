  <!-- Beggar -->
  <PawnKindDef>
    <defName>Beggar</defName>
    <label>beggar</label>
    <race>Human</race>
    <defaultFactionType>Beggars</defaultFactionType>
    <combatPower>35</combatPower>
    <gearHealthRange>0.1~0.3</gearHealthRange>
    <itemQuality>Awful</itemQuality>
