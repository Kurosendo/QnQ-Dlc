      <li>Awful</li>
    </techHediffsTags>
    <techHediffsChance>0.15</techHediffsChance>
    <inventoryOptions>
      <skipChance>0.9</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>10~25</countRange>
        </li>
        <li>
