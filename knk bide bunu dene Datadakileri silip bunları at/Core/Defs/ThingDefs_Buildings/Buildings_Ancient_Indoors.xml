<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>AncientLamp</defName>
    <label>ancient lamp</label>
    <description>An ancient self-powered lamp. Its internal power supply is badly depleted, but it still emits a weak glow.</description>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>14</pathCost>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <rotatable>false</rotatable>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/Ruins/AncientLamp</texPath>
    </graphicData>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5.5</glowRadius>
        <glowColor>(71,43,6,0)</glowColor>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
  </ThingDef>

</Defs>